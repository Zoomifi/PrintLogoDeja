<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/customer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E0E0E0"
    android:gravity="center_horizontal"
    tools:context=".ClockActivity">

    <RelativeLayout
        android:id="@+id/actionbar"
        android:background="@color/AquaGreen"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="26sp"
            android:paddingRight="10dp"
            android:paddingLeft="20dp"
            android:layout_centerVertical="true"
            android:textColor="@color/White"
            android:layout_alignParentLeft="true"/>

        <Button
            android:id="@+id/home_button"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:text="Home"
            android:textSize="20sp"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:background="@drawable/gray_button"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actionbar"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_search_category_default"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"/>

        <EditText
            android:id="@+id/search_bar"
            android:layout_below="@+id/actionbar"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:layout_weight="2"
            android:inputType="text"
            android:textSize="20sp"
            android:hint="@string/searchBarHint"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/search_background"
            android:layout_marginRight="5dp"/>
        <ImageButton
            android:id="@+id/clear"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_input_delete"
            android:tint="@color/Black"
            android:background="@color/Transparent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"/>
        <Button
            android:id="@+id/mode0"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="All"
            android:textSize="20sp"
            android:textColor="@color/White"
            android:textStyle="bold"
            android:background="@drawable/red_button"
            android:padding="20dp"
            android:layout_gravity="right"
            android:onClick="buttonClicked"
            />
        <Button
            android:id="@+id/mode1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="In"
            android:textSize="20sp"
            android:textColor="@color/White"
            android:textStyle="bold"
            android:background="@drawable/aqua_green_button"
            android:padding="20dp"
            android:layout_gravity="right"
            android:onClick="buttonClicked"
            />
        <Button
            android:id="@+id/mode2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Out"
            android:textSize="20sp"
            android:textColor="@color/White"
            android:textStyle="bold"
            android:background="@drawable/aqua_green_button"
            android:padding="20dp"
            android:layout_gravity="right"
            android:onClick="buttonClicked"
            />
        <Button
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New IPE"
            android:textSize="20sp"
            android:textColor="@color/White"
            android:textStyle="bold"
            android:background="@drawable/aqua_green_button"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="20dp"
            android:layout_gravity="right"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/titles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search"
        android:layout_marginTop="10dp"
        android:weightSum="12"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Stage Name"
            android:textSize="30sp"
            android:textColor="@color/Black"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Status"
            android:textSize="30sp"
            android:textColor="@color/Black"
            />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            >
            <Spinner
                android:id="@+id/active_spinner"
                android:layout_alignParentLeft="true"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:drawSelectorOnTop="true"
                android:entries="@array/active_spinner"
                />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_below="@+id/titles"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000000" />

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/line"
        android:id="@+id/employee_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <FrameLayout
        android:id="@+id/full_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</RelativeLayout>
