    <RelativeLayout
        android:id="@+id/ipe_layout"
        android:layout_above="@+id/bottom_layout"
        android:layout_below="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#E0E0E0"
        android:gravity="center_horizontal"
        tools:context=".ITEMSActivity">

        <GridView
            android:id="@+id/tabList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:numColumns="7"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:id="@+id/remove_button"
            android:layout_width="wrap_content"
            android:minWidth="120dp"
            android:layout_height="wrap_content"
            android:text="Remove IPE"
            android:textSize="20sp"
            android:textColor="@color/White"
            android:textStyle="bold"
            android:background="@drawable/red_button"
            android:layout_toLeftOf="@+id/edit_button"
            android:padding="10dp"
            android:layout_margin="10dp"
            />

        <Button
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:minWidth="120dp"
            android:layout_height="wrap_content"
            android:text="View Tab"
            android:textSize="20sp"
            android:textColor="@color/White"
            android:textStyle="bold"
            android:background="@drawable/gray_button"
            android:layout_toLeftOf="@+id/tabbutton"
            android:padding="10dp"
            android:layout_margin="10dp"
            />


        <Button
            android:id="@+id/orderbutton"
            android:layout_width="120dp"
            android:minWidth="120dp"
            android:layout_height="wrap_content"
            android:text="Orders"
            android:textSize="20sp"
            android:textColor="@color/White"
            android:textStyle="bold"
            android:background="@drawable/gray_button"
            android:layout_toRightOf="@+id/save_button"
            android:padding="10dp"
            android:layout_margin="10dp"
            />

        <Button
            android:id="@+id/tabbutton"
            android:layout_width="wrap_content"
            android:minWidth="120dp"
            android:layout_height="wrap_content"
            android:text="Select Items"
            android:textSize="20sp"
            android:textColor="@color/White"
            android:textStyle="bold"
            android:background="@drawable/yellow_button"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:minWidth="120dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textSize="20sp"
            android:textColor="@color/White"
            android:textStyle="bold"
            android:background="@drawable/blue_button"
            android:layout_toRightOf="@+id/tabbutton"
            android:padding="10dp"
            android:layout_margin="10dp"
            />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/full_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>



</RelativeLayout>
