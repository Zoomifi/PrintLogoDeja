<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/customer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E0E0E0"
    android:gravity="center_horizontal"
    tools:context=".ItemsActivity">

    <RelativeLayout
        android:id="@+id/actionbar"
        android:background="@color/AquaGreen"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        >

        <TextView
            android:id="@+id/dejatext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deja Vu"
            android:textSize="26sp"
            android:paddingRight="10dp"
            android:paddingLeft="20dp"
            android:layout_centerVertical="true"
            android:textColor="@color/White"
            android:layout_marginRight="5dp"
            android:layout_alignParentLeft="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/dejatext"
            >

            <Button
                android:id="@+id/sync_button"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="Sync"
                android:textSize="20sp"
                android:textColor="@color/White"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/gray_button"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_centerInParent="true"
            >

        <Button
            android:id="@+id/textclear"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Clear"
            android:textSize="20sp"
            android:textColor="@color/White"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/gray_button"
            android:layout_gravity="center"/>

    </LinearLayout>

        <ImageButton
            android:id="@+id/bleft"
            android:layout_toLeftOf="@+id/pages"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_action_left" />
        <TextView
            android:id="@+id/pages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/bright"
            android:layout_centerVertical="true"
            android:text="Page 1"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/White"
            />
        <ImageButton
            android:id="@+id/bright"
            android:layout_toLeftOf="@+id/home_button"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_action_right" />

        <Button
            android:id="@+id/home_button"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:text="Home"
            android:textSize="20sp"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:background="@drawable/gray_button"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>

