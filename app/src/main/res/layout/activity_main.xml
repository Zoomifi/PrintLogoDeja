<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#424242"
    android:gravity="center_horizontal"
    tools:context=".MerchantTestActivity">
<LinearLayout
    android:layout_margin="20dp"
    android:padding="16dp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#E0E0E0"
    android:gravity="center_horizontal"
    tools:context=".MerchantTestActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Your Current Receipt Logo:"
        android:layout_margin="10dp"
        android:textColor="@color/primary_material_dark"
        android:textSize="24sp"
        />
    <FrameLayout
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="200dp">
        <ImageView
            android:scaleType="fitCenter"
            android:background="@drawable/border"
            android:animateLayoutChanges="true"
            android:layout_width="200dp"
            android:layout_height="200dp"
            />

        <TextView
            android:id="@+id/background_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="Loading..."
            android:layout_margin="20dp"
            android:textSize="24sp"
            />
        <ImageView
            android:id="@+id/receipt_logo"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"         android:animateLayoutChanges="true"
            android:layout_width="200dp"
            android:layout_height="200dp"
            />
    </FrameLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/scaletext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="Logo Size: 100%"
        android:layout_marginTop="20dp"
        android:textColor="@color/primary_material_dark"
        android:textSize="20sp"
        />
    <SeekBar
        android:id="@+id/scale"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:layout_width="200dp"
        />

        </LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:text="Print Logo"
            android:layout_marginTop="20dp"
            android:textColor="@color/primary_material_dark"
            android:textSize="20sp"
            />
        <Switch
            android:id="@+id/mySwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:thumb="@drawable/thumb"
            android:track="@drawable/track"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>
</LinearLayout>

    <TextView
        android:layout_width="550dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="To submit or change your logo, please contact support@zoomifi.com to have it optimized and uploaded"
        android:textColor="@color/primary_material_dark"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/merc"
        android:layout_width="550dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="This is your Merchant ID:"
        android:textColor="@color/primary_material_dark"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        />

</LinearLayout>
</LinearLayout>